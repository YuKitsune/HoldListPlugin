<UserControl x:Class="HoldPlugin.Controls.HoldList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:HoldPlugin"
             xmlns:viewModels="clr-namespace:HoldPlugin.ViewModels"
             xmlns:converters="clr-namespace:HoldPlugin.Converters"
             Background="{x:Static local:Theme.BackgroundColor}"
             d:DataContext="{d:DesignInstance Type=viewModels:HoldListViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="150" d:DesignWidth="480">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/HoldPlugin;component/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <ScrollViewer Style="{StaticResource CustomScrollViewerStyle}">
        <ItemsControl ItemsSource="{Binding Items}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                
                    <Border
                        BorderBrush="{Binding State, Converter={StaticResource HoldItemStateToColorConverter}}"
                        Background="{x:Static local:Theme.ItemBackgroundColor}"
                        BorderThickness="2">
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                        
                            <Grid Grid.Column="0" Margin="4">
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="16"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Designator -->
                                <!-- TODO: Left-click to toggle designation -->
                                <Border Grid.Column="0"
                                        Width="16"
                                        Height="16"
                                        BorderBrush="{Binding State, Converter={StaticResource HoldItemStateToColorConverter}}"
                                        BorderThickness="2">
                                    <Border.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding DesignateAircraftCommand}"/>
                                    </Border.InputBindings>
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="Transparent"/>

                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDesignated}" Value="True">
                                                    <Setter Property="Background" Value="{Binding State, Converter={StaticResource HoldItemStateToColorConverter}}"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>
                                
                                <!-- ACID -->
                                <TextBlock Grid.Column="1"
                                           Text="{Binding DisplayAircraftId}"
                                           Foreground="{Binding State, Converter={StaticResource HoldItemStateToColorConverter}}"
                                           Padding="8,0,0,0"
                                           Background="Transparent">
                                    <TextBlock.InputBindings>
                                        <MouseBinding MouseAction="MiddleClick" Command="{Binding CancelHoldCommand}"/>
                                    </TextBlock.InputBindings>
                                </TextBlock>
                                
                                <!-- Level -->
                                <TextBlock Grid.Column="2" Text="{Binding DisplayLevel}" Foreground="{x:Static local:Theme.StripTextColor}" Padding="16,0,0,0"/>
                                
                                <!-- CFL -->
                                <!-- TODO: Left-click opens the CFL menu -->
                                <TextBlock Grid.Column="3"
                                           Text="{Binding DisplayClearedLevel}"
                                           Foreground="{Binding State, Converter={StaticResource HoldItemStateToColorConverter}}"
                                           Padding="16,0,0,0"
                                           Background="Transparent">
                                    <TextBlock.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding OpenClearedLevelMenuCommand}"/>
                                    </TextBlock.InputBindings>
                                </TextBlock>
                                
                                <!-- RVSM indicator -->
                                <TextBlock Grid.Column="4" Text="X" Foreground="{Binding State, Converter={StaticResource HoldItemStateToColorConverter}}" Padding="8,0,0,0" Visibility="{Binding RvsmApproved, Converter={StaticResource InvertedBoolToHiddenConverter}}"/>
                                
                                <!-- Hold Entry Time -->
                                <TextBlock Grid.Column="5" Text="{Binding DisplayHoldEntryTime}" Foreground="{Binding State, Converter={StaticResource HoldItemStateToColorConverter}}" Padding="8,0,0,0"/>
                            </Grid>
                        
                            <Border Grid.Column="1" BorderBrush="{x:Static local:Theme.StripTextColor}" BorderThickness="2,0,2,0" Padding="4">
                                
                                <!-- Hold Departure Time -->
                                <TextBlock Text="{Binding DisplayHoldExitTime}" Foreground="{x:Static local:Theme.StripTextColor}">
                                    <TextBlock.InputBindings>
                                        <MouseBinding MouseAction="LeftClick" Command="{Binding OpenHoldExitMenuCommand}"/>
                                    </TextBlock.InputBindings>
                                </TextBlock>
                            </Border>

                            <Border Grid.Column="2" Margin="4">
                                <!-- Global ops -->
                                <Grid>
                                    <!-- Display mode -->
                                    <TextBlock Text="{Binding DisplayGlobalOps}"
                                               Foreground="{x:Static local:Theme.StripTextColor}"
                                               Background="Transparent">
                                        <TextBlock.InputBindings>
                                            <MouseBinding MouseAction="LeftClick" Command="{Binding EditGlobalOpsCommand}"/>
                                        </TextBlock.InputBindings>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsEditingGlobalOps}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>

                                    <!-- Edit mode -->
                                    <TextBox Text="{Binding GlobalOpsEditValue, UpdateSourceTrigger=PropertyChanged}"
                                             Foreground="{x:Static local:Theme.InteractiveTextColor}"
                                             MaxLength="15"
                                             LostFocus="GlobalOpsTextBox_LostFocus"
                                             IsVisibleChanged="GlobalOpsTextBox_IsVisibleChanged">
                                        <TextBox.InputBindings>
                                            <KeyBinding Key="Return" Command="{Binding CommitGlobalOpsEditCommand}"/>
                                            <KeyBinding Key="Escape" Command="{Binding CancelGlobalOpsEditCommand}"/>
                                        </TextBox.InputBindings>
                                        <TextBox.Style>
                                            <Style TargetType="TextBox">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsEditingGlobalOps}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBox.Style>
                                    </TextBox>
                                </Grid>
                            </Border>
                        
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
